

default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :beta do
  
  get_certificates   
  get_provisioning_profile
  
    setup_ci
    increment_build_number(xcodeproj: "GitHubCICD.xcodeproj")
    build_app
    upload_to_testflight(skip_waiting_for_build_processing: true)
    
  end
end
