newBuildNumber = ((latestBuildNumber.is_a? String) ? latestBuildNumber.to_f.round(2) : (latestBuildNumber.is_a? Int ? latestBuildNumber.to_f.round(2) : latestBuildNumber)) + 0.1

    increment_build_number({
